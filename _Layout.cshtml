<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{ 
                    if (Session["Log"]!=null && Session["Log"].ToString() == "1")
                    {
                        @Html.ActionLink("Calendar", "AllEvents", "Admin", new { area = "" }, new { @class = "navbar-brand" });
                    }
                    else {
                        @Html.ActionLink("Calendar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" });
                    }
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["Log"] != null && Session["Log"].ToString() == "1")
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("UserAdmin", "UserAdmin", "Admin", new { area = "" }, new { @class = "glyphicon glyphicon-eye-open" })</li>
                        </ul>
                    }
                    @if (Session["Log"] != null && Session["Log"].ToString() == "0")
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("ListofClient", "ClientsList", "Home", new { area = "" }, new { @class = "glyphicon glyphicon-eye-open" })</li>
                        </ul>
                    }
                    @if (Session["Log"] == null)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Login", "Login", "Public", new { area = "" }, new { @class = "glyphicon glyphicon-user" })</li>
                            <li>@Html.ActionLink("Register", "Register", "Public", new { area = "" }, new { @class = "glyphicon glyphicon-user" })</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Logout", "Logout", "Public", null, new { @class = "glyphicon glyphicon-user" })</li>
                        </ul>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Calendar</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>